@page
@using ASPRazorPagesPaging
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Users:</h1>
<!-- SEARCH -->
@* <a asp-page-handler="ByName" asp-route-name="Tom" method="post">Click</a> *@
<form method="get">
    <p>
        Title: <input type="text" asp-for="SearchString"/>
        <input type="submit" value="Get" formmethod="get"/>
        <input type="submit" value="Search" asp-page-handler="ByName" asp-route-name="@Model.SearchString" formmethod="post"/>
    </p>
</form>
<table class="table">
    <tr><td>Name</td><td>Age</td></tr>
    @foreach (Person person in Model.DisplayedPeople)
    {
        <tr>
            <td>@person.Name</td>
            <td>@person.Age</td>
        </tr>
    }
</table>
<!-- END SEARCH -->
<div>
    <ul class="pagination">
        @if (Model.ShowPrev)
        {
            <li class="page-item">
                <a asp-page="/index" asp-route-currentpage="@(Model.CurrentPage - 1)" class="page-link">Prev</a>
            </li>
        }
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a asp-page="/index" asp-route-currentpage="@i" asp-route-pagesize="@Model.PageSize"  class="page-link">@i</a>
            </li>
        }
        @if (Model.ShowNext)
        {
            <li class="page-item">
                <a asp-page="/index" asp-route-currentpage="@(Model.CurrentPage + 1)" class="page-link">Next</a>
            </li>
        }
    </ul>
</div>